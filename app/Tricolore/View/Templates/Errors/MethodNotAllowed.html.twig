{% extends "BaseBlock.html.twig" %}

{% block head_title %}{% trans %}Method not allowed{% endtrans %}{% endblock %}

{% block breadcrumb %}
  {{ breadcrumb.addChild("Method not allowed"|trans) }}
{% endblock %}

{% block body_content %}
  <div class="error-wrap">
    <div class="focused-error-number">
      405
    </div>

    <div class="focused-error-message">
      <i class="fa fa-exclamation-triangle"></i> {% trans %}Method not allowed{% endtrans %}
    </div>

    <div class="error-message">
      {% trans with {'%method%': method} %}%method% method is not allowed for this request!{% endtrans %}
    </div>

    <div class="error-button">
      <a href="{{ config('base.full_url') }}" class="btn btn-primary"><i class="fa fa-home fa-lg"></i> <b>{% trans %}Return to homepage{% endtrans %}</b></a>
    </div>
  </div>
{% endblock %}
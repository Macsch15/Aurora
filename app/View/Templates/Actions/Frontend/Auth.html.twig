{% extends "BaseBlock.html.twig" %}

{% block head_title %}{% trans %}Authorization{% endtrans %}{% endblock %}
{% block container_class %}frontend-auth-panel-width{% endblock %}

{% block breadcrumb %}
  {{ breadcrumb.addChild("Authorization"|trans) }}
{% endblock %}

{% block body_content %}
  <div class="frontend-auth-panel-top-space">
    <h1>{% trans %}Authorization{% endtrans %}</h1>

    <div class="frontend-auth-panel-background">
      <form action="{{ url('auth') }}" method="post" {{ form_enctype(form) }}>
          {{ form_widget(form) }}
      </form>
      <br />
      <a href="#"><b>{% trans %}Forgot your password?{% endtrans %}</b></a><br />
      <a href="{{ url('register') }}"><b>{% trans %}Don't have an account yet?{% endtrans %}</b></a><br />
      <a href="{{ url('home') }}"><span class="ion-arrow-return-left"></span> {% trans %}Return to homepage{% endtrans %}</a>
    </div>
  </div>
{% endblock %}
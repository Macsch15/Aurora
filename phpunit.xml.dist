<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         bootstrap="library/Tricolore/Tests/Bootstrap/Bootstrap.php"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true">
    <filter>
        <blacklist>
            <directory>library/Symfony</directory>
            <directory>library/Carbon</directory>
            <directory>library/Twig</directory>
        </blacklist>
    </filter>
    <testsuites>
        <testsuite name="Tricolore Test Suite">
            <directory>library/Tricolore/Tests</directory>
        </testsuite>
    </testsuites>
</phpunit>

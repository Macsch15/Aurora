<!DOCTYPE html>
<html lang="{{ config('base.locale') }}">
  <head>
    <meta charset="{{ config('base.charset') }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Exception detected!</title>
    <link href="{{ assets('css', 'ui.css') }}" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body itemscope itemtype="http://schema.org/WebPage">
    <main class="container" role="main">
      <div class="exception-prod-maintitle">
        <h4>
          <i class="fa fa-exclamation-triangle"></i> Tricolore has crashed ᕙ(⇀‸↼‶)ᕗ <small>{{ exception_name }}</small>

          <div class="pull-right server-error">
            500 Internal Server Error
          </div>
        </h4>
      </div>

      <div class="jumbotron jumbotron-exception">
        <div class="exception-message">
          <h2 {{ exception.getMessage()|length > 80 ? 'class="less-font-size"' : null }}>
            <blockquote>
              {% if exception.getMessage() is empty %} 
                <em>(No message)</em>
              {% else %}
                {{ exception.getMessage() }}
              {% endif %}

              {% if exception_name != 'ErrorException' %}
                <footer>
                  Caught in 
                  <code>
                    {{ exception.getTrace().0.class is defined ? exception.getTrace().0.class ~ "->" : null }}{{ exception.getTrace().0.function }}()
                  </code>
                </footer>
              {% endif %}
            </blockquote>
          </h2>
        </div>

        <i class="fa fa-circle-o"></i> <b>Location:</b> <em>{{ path_info }}</em><br />
        <i class="fa fa-circle-o"></i> <b>Source:</b> <em>{{ error_file }}:{{ error_line }}</em>

        {% if file_lines|length > 1 %}
          <pre data-line-offset="{{ error_line - 5 }}" data-line="{{ error_line }}"><code class="language-php">
            {%- for code in file_lines -%}
              {{ code|e }}
            {%- endfor -%}
          </code></pre>
        {% endif %}
      </div>

      <div class="exception-prod-maintitle">
        <h4><i class="fa fa-code-fork"></i> Call stack</h4>
      </div>

      <div class="jumbotron jumbotron-exception">
        {% for key, value in exception.getTrace() %}
          <div style="margin-left: 20px">
            <span style="font-size: 41px; float:left; color: #808080; margin-right: 15px">{{ loop.index }}</span>

            {% if value.file is defined %}File: {{ value.file }}{% else %}<del class="muted-text">File: -</del>{% endif %}<br />
            {% if value.line is defined %}Line: {{ value.line }}{% else %}<del class="muted-text">Line: -</del>{% endif %}<br />
            {% if value.class is defined and value.function is defined %}Class: <b>{{ value.class }}->{{ value.function }}()</b>{% else %}<del class="muted-text">Class: -</del>{% endif %}<br />
          </div>

          {% if not loop.last %}
            <hr />
          {% endif %}
        {% endfor %}
      </div>
    </main>

    <footer class="container">
      <div class="pull-right footer">
        Powered by <a href="https://github.com/Macsch15/Tricolore">Tricolore</a> {{ app.getEnv() == 'dev' ? app.getVersion() : null }}
      </div>
    </footer>

    <script src="{{ assets('js', 'prism.js') }}"></script>
  </body>
</html>